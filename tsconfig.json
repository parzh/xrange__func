{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"declaration": true,

		"strict": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"forceConsistentCasingInFileNames": true,

		"watch": true,
		"noEmit": true,
		"diagnostics": false,
	},
}
